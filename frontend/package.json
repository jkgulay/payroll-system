{
  "name": "payroll-frontend",
  "version": "1.0.0",
  "description": "Construction Payroll Management System - Frontend",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "vite build && electron-builder",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs --fix --ignore-path .gitignore"
  },
  "dependencies": {
    "vue": "^3.4.0",
    "vue-router": "^4.2.5",
    "pinia": "^2.1.7",
    "vuetify": "^3.5.0",
    "@mdi/font": "^7.4.47",
    "axios": "^1.6.5",
    "dexie": "^3.2.4",
    "date-fns": "^3.0.6",
    "chart.js": "^4.4.1",
    "vue-chartjs": "^5.3.0",
    "jspdf": "^2.5.1",
    "jspdf-autotable": "^3.8.2",
    "xlsx": "^0.18.5",
    "vue-toastification": "^2.0.0-rc.5"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.3",
    "vite": "^5.0.11",
    "vite-plugin-vuetify": "^2.0.1",
    "sass": "^1.70.0",
    "electron": "^28.1.3",
    "electron-builder": "^24.9.1",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0",
    "eslint": "^8.56.0",
    "eslint-plugin-vue": "^9.20.1"
  },
  "main": "electron/main.js",
  "build": {
    "appId": "com.payroll.construction",
    "productName": "Construction Payroll",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "public/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/icon.png"
    }
  }
}
